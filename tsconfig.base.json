{
    "compilerOptions": {
      "composite": true,
      "esModuleInterop": true,
      "exactOptionalPropertyTypes": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ESNext", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "noEmit": true,
      "noErrorTruncation": true,
      "noUncheckedIndexedAccess": true,
      "strict": true,
      "target": "ESNext",
      "paths": {
        "@nfl-probabilities/*": ["../*/src"]
      }
    },
    "exclude": ["./dist/**/*"]
}